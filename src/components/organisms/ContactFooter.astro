---
// @src/components/organisms/ContactFooter.astro
interface Props {
  data: {
    email: string;
    phone: string;
    address?: string;
    copyright: string;
  };
}

const { data } = Astro.props;
---

<footer class="bg-surface pt-16 pb-8 border-t border-white/5">
  <div class="container mx-auto px-6">
    <div class="grid md:grid-cols-2 gap-12 mb-12">
      <div>
        <h2 class="text-2xl font-heading font-bold text-white mb-4">
          ¿Listo para comenzar?
        </h2>
        <p class="text-gray-400 mb-6">Hablemos sobre tu próximo proyecto.</p>
        <a
          href={`mailto:${data.email}`}
          class="text-primary hover:text-white font-bold text-lg transition-colors"
        >
          &rarr; {data.email}
        </a>
      </div>

      <div class="space-y-4 md:text-right">
        <div>
          <span class="block text-sm text-gray-500">Teléfono / WhatsApp</span>
          <a
            href={`https://wa.me/${data.phone.replace(/[^0-9]/g, "")}`}
            class="text-white hover:text-secondary transition-colors"
          >
            {data.phone}
          </a>
        </div>

        {
          data.address && (
            <div>
              <span class="block text-sm text-gray-500">Ubicación</span>
              <span class="text-white">{data.address}</span>
            </div>
          )
        }
      </div>
    </div>

    <div
      class="pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-gray-600"
    >
      <p>{data.copyright}</p>
      <p>
        Powered by <a
          href="https://a2lt-solutions.com"
          class="text-gray-500 hover:text-primary transition-colors"
          >A2LT Soluciones</a
        >
      </p>
    </div>
  </div>
</footer>
