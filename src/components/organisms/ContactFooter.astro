---
// @src/components/organisms/ContactFooter.astro
import { Image } from "astro:assets";

interface Props {
  data: {
    heading?: string;
    subheading?: string;
    email: string;
    phone: string;
    address?: string;
    social?: {
      facebook?: string;
      instagram?: string;
      linkedin?: string;
      twitter?: string;
      youtube?: string;
      tiktok?: string;
    };
    footer_logo?: any;
    footer_logo_alt?: string;
    copyright: string;
  };
}

const { data } = Astro.props;
const cleanPhone = data.phone.replace(/[^0-9]/g, "");
const waHref = `https://wa.me/${cleanPhone}`;
const brand_name = "A2LT Soluciones";

// Links de navegación estáticos para la V-Card
const navLinks = [
  { text: "Inicio", href: "/" },
  { text: "Servicios", href: "/servicios" }, // <--- Va a la página de catálogo completa
  { text: "Consultorías", href: "/knowledge" }, // <--- Va a la página de blog/proyectos completa
  { text: "Nosotros", href: "/#nosotros" }, // Sigue en home
  { text: "Contacto", href: "/#contacto" }, // Sigue en home
];
---

<footer
  id="contacto"
  class="bg-[#0f1115] relative pt-20 pb-10 px-6 overflow-hidden border-t border-white/5"
>
  {/* Efectos Ambientales (Sello de Marca) */}
  <div
    class="absolute top-0 left-1/2 -translate-x-1/2 w-[80%] h-px bg-linear-to-r from-transparent via-secondary/50 to-transparent"
  >
  </div>
  <div
    class="absolute bottom-0 right-0 w-96 h-96 bg-primary/10 blur-[100px] rounded-full pointer-events-none"
  >
  </div>

  <div class="container mx-auto max-w-7xl relative z-10">
    {/* Toast Notification */}
    <div
      id="toast-notification"
      class="fixed bottom-10 left-1/2 -translate-x-1/2 bg-green-500 text-black font-bold px-6 py-3 rounded-full shadow-[0_0_20px_rgba(34,197,94,0.6)] transform translate-y-20 opacity-0 transition-all duration-500 z-50 pointer-events-none flex items-center gap-2"
    >
      <span>correo copiado en el portapapeles</span>
      <span>✔</span>
    </div>

    {/* --- GRID DE 5 COLUMNAS --- */}
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-[1.4fr_0.6fr_2fr_1fr] gap-8 mb-16 items-start"
    >
      {/* COLUMNA 1: CONTENIDO */}
      <div class="space-y-4">
        <h2 class="text-2xl font-heading font-bold text-white">
          {data.heading || "¿Listo para empezar?"}
        </h2>
        <p class="text-white/60 leading-relaxed text-sm">
          {
            data.subheading ||
              "Innovación digital para empresas que buscan trascender los límites convencionales."
          }
        </p>
      </div>

      {/* COLUMNA 2: NAVEGACIÓN */}
      <div>
        <h3
          class="font-bold text-white mb-6 relative inline-block after:content-[''] after:absolute after:bottom-[-4px] after:left-0 after:w-1/2 after:h-[2px] after:bg-secondary"
        >
          Navegación
        </h3>
        <ul class="space-y-3">
          {
            navLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-white/60 hover:text-white transition-colors text-sm flex items-center gap-2 group"
                >
                  <span class="w-1.5 h-1.5 bg-white/20 rounded-full group-hover:bg-secondary transition-colors" />
                  {link.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* COLUMNA 3: BRANDING + SOCIALES (NEÓN) */}
      <div class="flex flex-col items-center">
        {/* Bloque Logo */}
        <div>
          {
            data.footer_logo ? (
              <Image
                src={data.footer_logo}
                alt={data.footer_logo_alt || brand_name}
                class="w-48 object-contain"
              />
            ) : (
              <h3 class="text-xl font-heading font-bold text-white">
                {brand_name}
              </h3>
            )
          }
        </div>

        {/* Bloque Redes Sociales (Tus iconos Neón) */}
        <div class="flex flex-wrap gap-3 pt-0">
          {
            data.social?.facebook && (
              <a
                href={data.social.facebook}
                target="_blank"
                aria-label="Facebook"
                class="social-icon facebook-hover"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="currentColor"
                  viewBox="0 0 16 16"
                >
                  <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951" />
                </svg>
              </a>
            )
          }
          {
            data.social?.instagram && (
              <a
                href={data.social.instagram}
                target="_blank"
                aria-label="Instagram"
                class="social-icon instagram-hover"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="currentColor"
                  viewBox="0 0 16 16"
                >
                  <path d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.9 3.9 0 0 0-1.417.923A3.9 3.9 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.9 3.9 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.9 3.9 0 0 0-.923-1.417A3.9 3.9 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599s.453.546.598.92c.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.5 2.5 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.5 2.5 0 0 1-.92-.598 2.5 2.5 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233s.008-2.388.046-3.231c.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92s.546-.453.92-.598c.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92m-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217m0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334" />
                </svg>
              </a>
            )
          }
          {
            data.social?.tiktok && (
              <a
                href={data.social.tiktok}
                target="_blank"
                aria-label="TikTok"
                class="social-icon tiktok-hover"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="currentColor"
                  viewBox="0 0 16 16"
                >
                  <path d="M9 0h1.98c.144.715.54 1.617 1.235 2.512C12.895 3.389 13.797 4 15 4v2c-1.753 0-3.07-.814-4-1.829V11a5 5 0 1 1-5-5v2a3 3 0 1 0 3 3z" />
                </svg>
              </a>
            )
          }
          {
            data.social?.linkedin && (
              <a
                href={data.social.linkedin}
                target="_blank"
                aria-label="LinkedIn"
                class="social-icon linkedin-hover"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="currentColor"
                  viewBox="0 0 16 16"
                >
                  <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z" />
                </svg>
              </a>
            )
          }
          {
            data.social?.twitter && (
              <a
                href={data.social.twitter}
                target="_blank"
                aria-label="X"
                class="social-icon x-hover"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="currentColor"
                  viewBox="0 0 16 16"
                >
                  <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z" />
                </svg>
              </a>
            )
          }
          {
            data.social?.youtube && (
              <a
                href={data.social.youtube}
                target="_blank"
                aria-label="YouTube"
                class="social-icon youtube-hover"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="currentColor"
                  viewBox="0 0 16 16"
                >
                  <path d="M8.051 1.999h.089c.822.003 4.987.033 6.11.335a2.01 2.01 0 0 1 1.415 1.42c.101.38.172.883.22 1.402l.01.104.022.26.008.104c.065.914.073 1.77.074 1.957v.075c-.001.194-.01 1.108-.082 2.06l-.008.105-.009.104c-.05.572-.124 1.14-.235 1.558a2.01 2.01 0 0 1-1.415 1.42c-1.16.312-5.569.334-6.18.335h-.142c-.309 0-1.587-.006-2.927-.052l-.17-.006-.087-.004-.171-.007-.171-.007c-1.11-.049-2.167-.128-2.654-.26a2.01 2.01 0 0 1-1.415-1.419c-.111-.417-.185-.986-.235-1.558L.09 9.82l-.008-.104A31 31 0 0 1 0 7.68v-.123c.002-.215.01-.958.064-1.778l.007-.103.003-.052.008-.104.022-.26.01-.104c.048-.519.119-1.023.22-1.402a2.01 2.01 0 0 1 1.415-1.42c.487-.13 1.544-.21 2.654-.26l.17-.007.172-.006.086-.003.171-.007A100 100 0 0 1 7.858 2zM6.4 5.209v4.818l4.157-2.408z" />
                </svg>
              </a>
            )
          }
        </div>
      </div>

      {/* COLUMNA 4: CONTACTO (Botón Copiar Restaurado) */}
      <div class="space-y-6">
        <h3
          class="font-bold text-white mb-6 relative inline-block after:content-[''] after:absolute after:bottom-[-4px] after:left-0 after:w-1/2 after:h-[2px] after:bg-primary"
        >
          Datos de Contacto
        </h3>

        <ul class="space-y-5">
          {/* EMAIL: Mailto + Botón Copiar */}
          <li class="group">
            <p
              class="text-xs text-white/40 uppercase font-bold tracking-widest mb-1"
            >
              Correo Electrónico
            </p>
            <div class="flex items-center gap-3">
              <a
                href={`mailto:${data.email}`}
                class="text-white hover:text-primary transition-colors text-lg"
              >
                {data.email}
              </a>
              {/* Botón de Copiar Restaurado */}
              <button
                id="email-copy-button"
                data-email={data.email}
                class="bg-white/10 hover:bg-white/20 text-white p-2 rounded-md transition-colors"
                aria-label="Copiar correo"
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path></svg
                >
              </button>
            </div>
          </li>

          {/* TELÉFONO: WhatsApp Logo + Link */}
          <li>
            <p
              class="text-xs text-white/40 uppercase font-bold tracking-widest mb-1"
            >
              Teléfono
            </p>
            <a
              href={waHref}
              target="_blank"
              class="flex items-center gap-2 text-white hover:text-green-400 transition-colors text-lg"
            >
              {/* Logo de WhatsApp Verde */}
              <svg
                class="w-5 h-5 text-green-500"
                fill="currentColor"
                viewBox="0 0 24 24"
                ><path
                  d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.894 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.89-5.451 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01s-.521.074-.792.372c-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.626.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.289.173-1.413z"
                ></path></svg
              >
              <span>{data.phone}</span>
            </a>
          </li>

          {/* DIRECCIÓN */}
          {
            data.address && (
              <li>
                <p class="text-xs text-white/40 uppercase font-bold tracking-widest mb-1">
                  Ubicación
                </p>
                <span class="text-white/70 text-lg">{data.address}</span>
              </li>
            )
          }
        </ul>
      </div>
    </div>

    {/* COPYRIGHT */}
    <div
      class="pt-8 flex flex-col md:flex-row justify-between items-center text-sm font-sans text-white/40 border-t border-white/5"
    >
      <p>{data.copyright}</p>
      <p class="mt-2 md:mt-0 opacity-50">Desarrollado ⚡ por A2LT Soluciones</p>
    </div>
  </div>
</footer>

<style is:global>
  /* --- Estilos Redes Sociales (Footer) --- */
  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.8rem;
    height: 2.8rem;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.03);
    color: rgba(255, 255, 255, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .social-icon svg {
    width: 22px;
    height: 22px;
  }

  /* HOVER EFFECTS: El efecto "Sello de Marca" Neón */
  .facebook-hover:hover {
    background-color: #1877f2;
    color: white;
    border-color: #1877f2;
    transform: translateY(-4px) scale(1.1);
    box-shadow: 0 10px 20px -5px rgba(24, 119, 242, 0.5);
  }
  .instagram-hover:hover {
    background: linear-gradient(
      45deg,
      #f09433 0%,
      #e6683c 25%,
      #dc2743 50%,
      #cc2366 75%,
      #bc1888 100%
    );
    color: white;
    border-color: transparent;
    transform: translateY(-4px) scale(1.1);
    box-shadow: 0 10px 20px -5px rgba(220, 39, 67, 0.5);
  }
  .x-hover:hover {
    background-color: #000000;
    color: white;
    border-color: #ffffff;
    transform: translateY(-4px) scale(1.1);
    box-shadow: 0 10px 20px -5px rgba(255, 255, 255, 0.3);
  }
  .linkedin-hover:hover {
    background-color: #0a66c2;
    color: white;
    border-color: #0a66c2;
    transform: translateY(-4px) scale(1.1);
    box-shadow: 0 10px 20px -5px rgba(10, 102, 194, 0.5);
  }
  .youtube-hover:hover {
    background-color: #ff0000;
    color: white;
    border-color: #ff0000;
    transform: translateY(-4px) scale(1.1);
    box-shadow: 0 10px 20px -5px rgba(255, 0, 0, 0.5);
  }
  .tiktok-hover:hover {
    background-color: #000000;
    color: white;
    border-color: #fe2c55;
    transform: translateY(-4px) scale(1.1);
    box-shadow:
      -2px -2px 15px rgba(37, 244, 238, 0.4),
      2px 2px 15px rgba(254, 44, 85, 0.4);
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const emailBtn = document.getElementById("email-copy-button");
    const toast = document.getElementById("toast-notification");

    if (emailBtn && toast) {
      emailBtn.addEventListener("click", async () => {
        const email = emailBtn.getAttribute("data-email");
        if (!email) return;

        try {
          await navigator.clipboard.writeText(email);
          // Mostrar Toast
          toast.classList.remove("translate-y-20", "opacity-0");
          // Ocultar Toast
          setTimeout(() => {
            toast.classList.add("translate-y-20", "opacity-0");
          }, 2500);
        } catch (err) {
          console.error("Error al copiar:", err);
        }
      });
    }
  });
</script>
