---
// @src/components/organisms/ContactFooter.astro
interface Props {
  data: {
    email: string;
    phone: string;
    address?: string;
    copyright: string;
    footer_logo?: any; // <--- Nuevo Prop
  };
}

const { data } = Astro.props;
---

<footer class="bg-surface border-t border-white/5 pt-16 pb-8">
  <div class="container mx-auto px-6">
    <div
      class="grid md:grid-cols-3 gap-12 mb-16 items-center text-center md:text-left"
    >
      <div>
        <h3 class="text-2xl font-heading font-bold text-white mb-4">
          ¿Listo para comenzar?
        </h3>
        <p class="text-gray-400 mb-6">
          Hablemos sobre tu próximo proyecto y llevemos tu negocio al siguiente
          nivel.
        </p>
        <a
          href={`mailto:${data.email}`}
          class="text-primary hover:text-white font-bold transition-colors inline-flex items-center gap-2"
        >
          Enviar un correo
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><line x1="5" y1="12" x2="19" y2="12"></line><polyline
              points="12 5 19 12 12 19"></polyline></svg
          >
        </a>
      </div>

      <div class="flex flex-col items-center justify-center">
        {
          data.footer_logo ? (
            /* Opción A: Cliente subió logo */
            <img
              src={data.footer_logo}
              alt="Logo Corporativo"
              class="h-auto max-h-24 w-auto object-contain mb-4 opacity-90 hover:opacity-100 transition-opacity"
              loading="lazy"
            />
          ) : (
            /* Opción B: Fallback profesional (Solo texto tipográfico) */
            <div class="mb-4">
              <span class="text-4xl font-heading font-black text-white tracking-tighter">
                A2LT<span class="text-primary">.</span>
              </span>
            </div>
          )
        }
      </div>

      <div class="md:text-right">
        <div class="space-y-4">
          <div>
            <p class="text-xs text-gray-500 uppercase tracking-widest mb-1">
              Teléfono / WhatsApp
            </p>
            <a
              href={`https://wa.me/${data.phone.replace(/[^0-9]/g, "")}`}
              class="text-white font-bold hover:text-secondary transition-colors text-lg"
            >
              {data.phone}
            </a>
          </div>

          {
            data.address && (
              <div>
                <p class="text-xs text-gray-500 uppercase tracking-widest mb-1">
                  Ubicación
                </p>
                <p class="text-gray-300">{data.address}</p>
              </div>
            )
          }

          <div>
            <p class="text-xs text-gray-500 uppercase tracking-widest mb-1">
              Correo
            </p>
            <p class="text-gray-300">{data.email}</p>
          </div>
        </div>
      </div>
    </div>

    <div
      class="border-t border-white/5 pt-8 text-center md:flex md:justify-between md:items-center"
    >
      <p class="text-gray-600 text-sm">
        {data.copyright}
      </p>
      <p class="text-gray-600 text-sm mt-2 md:mt-0">
        Powered by <a href="#" class="hover:text-primary transition-colors"
          >A2LT Soluciones</a
        >
      </p>
    </div>
  </div>
</footer>
