---
// @src/components/Header.astro (VERSIÓN 4.2 - CORREGIDO)
import { getEntry } from 'astro:content';

const contacto = await getEntry('informacion-de-contacto', 'general');
const c = contacto?.data ?? {};
const waNumber = c.whatsapp ?? '';
const waMsg = encodeURIComponent(c.whatsapp_message ?? 'Hola, vengo de Elevawod.cl y quiero cotizar un proyecto');
const waHref = waNumber ? `https://wa.me/${waNumber}?text=${waMsg}` : null;

const navLinks = [
  { href: "/#inicio", text: "Inicio" },
  { href: "/#nosotros", text: "Nosotros" },
  { href: "/proyectos", text: "Proyectos" },
  { href: "/#servicios", text: "Servicios" },
  { href: "/#clientes", text: "Clientes" },
];
---

{/* Header V4.1 (absolute) */}
<header id="main-header" class="absolute top-0 left-0 w-full z-50 transition-colors duration-300 ease-in-out">
  <div class="container mx-auto flex justify-between items-center p-4">
    <a href="/" class="ml-5 md:ml-16 no-underline hover:no-underline ">
      <img class="max-h-14 md:max-h-20" src="/assets/uploads/Logo-Elevawod-Horizontal-trasnparente.png" alt="Logo Elevawod" />
    </a>

    
    {/* Navegación de escritorio oculta (V4.0) */}
    <nav class="hidden items-center space-x-6 mr-5 md:mr-32">
      {navLinks.map(link => 
        <a
          href={link.href}
          class="text-white font-bold font-sans duration-200 relative submenu-link inline-block transform transition-transform ease-in-out hover:scale-[1.1] no-underline hover:no-underline"
        >
          {link.text}
        </a>
      )}
      {waHref && (
        <a href={waHref} target="_blank" rel="noopener noreferrer" class="bg-accent text-primary font-bold py-2 px-4 transition-all duration-300 ease-in-out hover:bg-white hover:text-accent border-2 border-accent no-underline hover:no-underline">Contacto</a>
      )}
    </nav>

    {/* Botón de hamburguesa visible siempre (V4.0) */}
    <button id="mobile-menu-button" class="block text-white z-50 mr-5 md:mr-16">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
    </button>
  </div>

    {/* CORREGIDO V4.2: Se eliminó 'md:hidden'.
      Este div DEBE existir en todos los tamaños de pantalla
      para que el script pueda encontrarlo y mostrarlo.
    */}
    <div id="mobile-menu" class="fixed top-0 left-0 w-full h-screen bg-primary/95 backdrop-blur-sm flex flex-col items-center justify-center space-y-8 transform -translate-x-full transition-transform duration-300 ease-in-out">
    {navLinks.map(link => 
      <a href={link.href} class="text-white text-3xl font-sans mobile-link">{link.text}</a>
    )}
    {waHref && (
      <a href={waHref} target="_blank" rel="noopener noreferrer" class="bg-accent text-primary font-bold py-3 px-8 text-lg mt-8">Contacto</a>
    )}
  </div>
</header>

<style>
/* Estilos para el efecto de subrayado (si se usara en desktop) */
.submenu-link {
  position: relative;
  color: white !important;
}
.submenu-link::after {
  content: '';
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 100%;
  height: 2px;
  background-color: theme('colors.accent');
  transform: scaleX(0);
  transform-origin: bottom left;
  transition: transform 0.3s ease-out;
}
.submenu-link:hover::after {
  transform: scaleX(1);
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Script de menú móvil (sin cambios)
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (!mobileMenuButton || !mobileMenu) {
      return; 
    }

    const mobileLinks = mobileMenu.querySelectorAll('.mobile-link');

    // Toggle mobile menu
    mobileMenuButton.addEventListener('click', (e) => {
      e.stopPropagation();
      mobileMenu.classList.toggle('-translate-x-full');
    });

    // Close mobile menu when a link is clicked
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('-translate-x-full');
      });
    });
  });
</script>