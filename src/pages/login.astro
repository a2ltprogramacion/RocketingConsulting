---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Iniciar Sesión">
  <div
    class="container mx-auto px-4 py-8 max-w-md h-screen flex flex-col justify-center"
  >
    <div
      class="bg-white dark:bg-slate-800 p-8 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700"
    >
      <h1 class="text-2xl font-bold mb-6 text-center">Acceso a Consultorías</h1>

      <div
        id="success-msg"
        class="hidden mb-4 p-3 bg-green-100 text-green-700 rounded text-center"
      >
        ¡Usuario creado exitosamente! Por favor ingrese.
      </div>

      <form id="login-form" class="space-y-4">
        <div>
          <label class="block text-sm font-medium mb-1">Usuario</label>
          <input
            required
            type="text"
            name="username"
            class="w-full p-2 border rounded dark:bg-slate-700 dark:border-gray-600"
          />
        </div>

        <div>
          <label class="block text-sm font-medium mb-1">Contraseña</label>
          <input
            required
            type="password"
            name="password"
            class="w-full p-2 border rounded dark:bg-slate-700 dark:border-gray-600"
          />
        </div>

        <button
          type="submit"
          class="w-full bg-primary hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-colors mt-2"
        >
          Entrar
        </button>
      </form>
      <p id="login-error" class="text-red-500 mt-4 hidden text-center"></p>
    </div>
  </div>
</Layout>

<script>
  // Add query param check for registration success
  const urlParams = new URLSearchParams(window.location.search);
  const successMsg = document.getElementById("success-msg");
  if (urlParams.get("registered") === "true" && successMsg) {
    successMsg.classList.remove("hidden");
  }

  const loginForm = document.getElementById("login-form");
  const loginError = document.getElementById("login-error");

  if (loginForm) {
    loginForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      // @ts-ignore
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData);

      try {
        const response = await fetch("/api/login", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          window.location.href = "/knowledge";
        } else {
          const err = await response.json();
          throw new Error(err.message || "Credenciales inválidas");
        }
      } catch (error: any) {
        if (loginError) {
          loginError.textContent = error.message;
          loginError.classList.remove("hidden");
        }
      }
    });
  }
</script>
