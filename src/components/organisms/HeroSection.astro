---
// @src/components/organisms/HeroSection.astro
import { Image } from "astro:assets";

interface Props {
  data: {
    title: string;
    subtitle?: string;
    image: any; // Astro Image object
    image_alt: string;
    cta_text: string;
    cta_link: string;
  };
}

const { data } = Astro.props;
---

<section class="relative py-20 lg:py-32 overflow-hidden">
  <div class="container mx-auto px-6 relative z-10">
    <div class="flex flex-col-reverse lg:flex-row items-center gap-12">
      <div class="w-full lg:w-1/2 text-center lg:text-left">
        <h1
          class="text-4xl lg:text-6xl font-heading font-black text-white leading-tight mb-6"
        >
          {data.title}
        </h1>

        {
          data.subtitle && (
            <p class="text-lg text-gray-300 mb-8 max-w-lg mx-auto lg:mx-0 leading-relaxed">
              {data.subtitle}
            </p>
          )
        }

        <a
          href={data.cta_link}
          class="inline-block bg-primary hover:bg-orange-600 text-white font-bold py-4 px-8 rounded-lg transition-all shadow-lg shadow-primary/30 hover:shadow-primary/50"
        >
          {data.cta_text}
        </a>
      </div>

      <div class="w-full lg:w-1/2 flex justify-center lg:justify-end">
        <div
          class="relative w-full max-w-md aspect-square rounded-2xl overflow-hidden border-4 border-surface shadow-2xl"
        >
          <Image
            src={data.image}
            alt={data.image_alt}
            width={600}
            height={600}
            class="object-cover w-full h-full"
            loading="eager"
          />
          <div
            class="absolute -bottom-10 -left-10 w-40 h-40 bg-secondary/20 rounded-full blur-2xl pointer-events-none"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
