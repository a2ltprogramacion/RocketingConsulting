---
// @src/pages/knowledge/[slug].astro
import { getCollection, getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/organisms/Navbar.astro";
import ContactFooter from "../../components/organisms/ContactFooter.astro";
import { Image } from "astro:assets";

export async function getStaticPaths() {
  const knowledgeEntries = await getCollection("knowledge");
  return knowledgeEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const {
  title,
  main_image,
  main_image_alt,
  description,
  content_blocks,
  category,
  consultant_video,
} = entry.data;

// Convertir URL de YouTube a formato embed
function getYouTubeEmbedUrl(url: string): string {
  const regExp =
    /^.*(youtu\.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
  const match = url.match(regExp);
  const videoId = match && match[2].length === 11 ? match[2] : null;
  return videoId
    ? `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0`
    : url;
}

const embedUrl = consultant_video ? getYouTubeEmbedUrl(consultant_video) : null;

const homePage = await getEntry("pages", "home");
const contactData = homePage?.data.contact;
const siteName = homePage?.data?.seo?.site_name || "A2LT Knowledge";
const cleanPhone = contactData?.phone.replace(/[^0-9]/g, "") || "";
const waLink = `https://wa.me/${cleanPhone}`;

const seoData = {
  meta_title: `${title} | ${category} | ${siteName}`,
  meta_description: description,
  social_image: main_image,
  social_image_alt: main_image_alt,
};
---

<Layout seo={seoData}>
  <Navbar siteName={siteName} whatsappLink={waLink} />

  <main>
    {/* HERO DINÁMICO */}
    <section
      class="relative h-[60vh] flex items-center justify-center overflow-hidden"
    >
      <Image
        src={main_image}
        alt={main_image_alt}
        class="absolute inset-0 w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-black/70"></div>

      <div class="relative z-10 text-center px-6 max-w-4xl">
        <span
          class="inline-block px-4 py-1 bg-primary text-white text-sm font-bold rounded-full mb-4"
        >
          {category}
        </span>
        <h1 class="text-4xl md:text-6xl font-heading font-bold text-white mb-4">
          {title}
        </h1>
      </div>
    </section>

    {/* RESUMEN */}
    <section class="py-20 bg-background border-b border-white/5">
      <div class="container mx-auto px-6 text-center max-w-3xl">
        <p class="text-xl text-gray-300 leading-relaxed font-light">
          {description}
        </p>
      </div>
    </section>

    {/* DISEÑO EN Z - Knowledge Base */}
    {
      content_blocks && (
        <section class="py-20 bg-background space-y-32">
          {/* BLOQUE 1 */}
          {/* BLOQUE 1: REESTRUCTURADO (Media arriba y centrado) */}
          <section class="py-20 bg-background">
            <div class="container mx-auto px-6 max-w-5xl">
              {/* ÁREA DE MEDIA (Imagen o Video) */}
              <div class="mb-12 reveal">
                {content_blocks.p1_media_type === "video" &&
                content_blocks.p1_video_url ? (
                  <div class="aspect-video w-full rounded-3xl overflow-hidden border border-white/10 shadow-2xl">
                    <iframe
                      src={`https://www.youtube.com/embed/${content_blocks.p1_video_url.split("v=")[1]}`}
                      class="w-full h-full"
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen
                    />
                  </div>
                ) : (
                  content_blocks.p1_image && (
                    <div class="rounded-3xl overflow-hidden border border-white/10 shadow-2xl">
                      <Image
                        src={content_blocks.p1_image}
                        alt={
                          content_blocks.p1_image_alt || "Imagen descriptiva"
                        }
                        class="w-full h-auto max-h-[500px] object-cover"
                      />
                    </div>
                  )
                )}
              </div>

              {/* TEXTO DEL BLOQUE */}
              <div class="text-center max-w-3xl mx-auto">
                <h2 class="text-3xl md:text-4xl font-heading font-bold text-white mb-6">
                  {content_blocks.p1_title}
                </h2>
                <div class="prose prose-invert prose-lg max-w-none text-gray-400">
                  <div set:html={content_blocks.p1_content} />
                </div>
              </div>
            </div>
          </section>

          {/* BLOQUE 2 */}
          {content_blocks.p2_text && (
            <div class="container mx-auto px-6 grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
              <div class="order-2 md:order-1 rounded-3xl overflow-hidden border border-white/10 shadow-2xl">
                {content_blocks.p2_image && (
                  <Image
                    src={content_blocks.p2_image}
                    alt={
                      content_blocks.p2_image_alt ||
                      `Imagen descriptiva 2 - ${title}`
                    }
                    class="w-full h-auto object-cover"
                  />
                )}
              </div>
              <div class="order-1 md:order-2 prose prose-invert prose-orange max-w-none text-gray-400">
                <div set:html={content_blocks.p2_text} />
              </div>
            </div>
          )}

          {/* BLOQUE 3 */}
          {content_blocks.p3_text && (
            <div class="container mx-auto px-6 grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
              <div class="prose prose-invert prose-orange max-w-none text-gray-400">
                <div set:html={content_blocks.p3_text} />
              </div>
              {content_blocks.p3_image && (
                <div class="rounded-3xl overflow-hidden border border-white/10 shadow-2xl">
                  <Image
                    src={content_blocks.p3_image}
                    alt={
                      content_blocks.p3_image_alt ||
                      `Imagen descriptiva 3 - ${title}`
                    }
                    class="w-full h-auto object-cover"
                  />
                </div>
              )}
            </div>
          )}

          {/* CONCLUSIÓN */}
          {content_blocks.conclusion && (
            <div class="container mx-auto px-6 max-w-4xl">
              <div class="prose prose-invert prose-orange max-w-none text-gray-400 bg-surface/30 p-10 rounded-3xl border border-white/5">
                <div set:html={content_blocks.conclusion} />
              </div>
            </div>
          )}
        </section>
      )
    }

    {/* --- CTA: LLAMA A TU CONSULTOR --- */}
    {
      embedUrl && (
        <section class="py-20 bg-background">
          <div class="container mx-auto px-6 text-center">
            <div class="max-w-2xl mx-auto bg-surface/30 border border-white/10 rounded-3xl p-12 backdrop-blur-sm">
              <div class="w-20 h-20 bg-accent/20 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg
                  class="w-10 h-10 text-accent"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"
                  />
                </svg>
              </div>
              <h2 class="text-3xl md:text-4xl font-heading font-bold text-white mb-4">
                ¿Tienes dudas sobre esta consultoría?
              </h2>
              <p class="text-gray-400 mb-8">
                Mira cómo uno de nuestros consultores te explica todos los
                detalles.
              </p>
              <button
                id="btn-call-consultant"
                class="inline-flex items-center gap-3 bg-accent hover:bg-orange-600 text-white font-black py-5 px-12 rounded-2xl transition-all hover:scale-105 shadow-[0_0_30px_rgba(249,115,22,0.4)] cursor-pointer"
              >
                <svg
                  class="w-6 h-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  />
                </svg>
                Llama a tu consultor
              </button>
            </div>
          </div>
        </section>
      )
    }

    {/* --- MODAL DE VIDEO --- */}
    {
      embedUrl && (
        <div
          id="video-modal"
          class="fixed inset-0 z-50 hidden items-center justify-center bg-black/90 backdrop-blur-md p-4"
        >
          <div class="relative w-full max-w-4xl aspect-video">
            <button
              id="btn-close-modal"
              class="absolute -top-12 right-0 text-white hover:text-accent transition-colors cursor-pointer"
              aria-label="Cerrar video"
            >
              <svg
                class="w-10 h-10"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M6 18L18 6M6 6l12 12"
                />
              </svg>
            </button>
            <iframe
              id="video-iframe"
              class="w-full h-full rounded-2xl border border-white/10"
              src=""
              title="Video del Consultor"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            />
          </div>
        </div>
      )
    }
  </main>
  {/* --- SCRIPT: Modal Interactivo --- */}
  <script is:inline define:vars={{ embedUrl }}>
    document.addEventListener("DOMContentLoaded", () => {
      const btnOpen = document.getElementById("btn-call-consultant");
      const btnClose = document.getElementById("btn-close-modal");
      const modal = document.getElementById("video-modal");
      const iframe = document.getElementById("video-iframe");

      if (!btnOpen || !modal || !iframe) return;

      btnOpen.addEventListener("click", () => {
        iframe.src = embedUrl;
        modal.classList.remove("hidden");
        modal.classList.add("flex");
        document.body.style.overflow = "hidden";
      });

      function closeModal() {
        modal.classList.add("hidden");
        modal.classList.remove("flex");
        iframe.src = "";
        document.body.style.overflow = "";
      }

      if (btnClose) btnClose.addEventListener("click", closeModal);
      modal.addEventListener("click", (e) => {
        if (e.target === modal) closeModal();
      });
      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && !modal.classList.contains("hidden"))
          closeModal();
      });
    });
  </script>
</Layout>

<style is:global>
  .prose h2,
  .prose h3 {
    color: white;
    font-family: var(--font-heading);
    font-weight: bold;
    margin-bottom: 1.5rem;
  }
  .prose p {
    line-height: 1.8;
    margin-bottom: 1.25rem;
  }
  .prose strong {
    color: var(--color-secondary);
  }
  .prose ul {
    list-style-type: disc;
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }
</style>
