---
// @src/components/organisms/ClientsSection.astro
import { Image } from "astro:assets";

interface Props {
  clients: {
    logo?: any;
    name: string;
  }[];
}

const { clients } = Astro.props;
---

<section class="py-12 border-b border-white/5 bg-background">
  <div class="container mx-auto px-6 text-center">
    <p class="text-sm font-bold text-gray-500 uppercase tracking-widest mb-8">
      Conf√≠an en nosotros
    </p>

    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16">
      {
        clients.map((client) => (
          <div class="w-32 h-20 flex items-center justify-center grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition-all duration-300">
            <Image
              src={client.logo}
              alt={client.name}
              width={128}
              height={80}
              class="max-w-full max-h-full object-contain"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
