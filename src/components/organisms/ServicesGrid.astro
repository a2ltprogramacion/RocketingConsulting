---
// @src/components/organisms/ServicesGrid.astro
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  services: CollectionEntry<"services">[];
}

const { services } = Astro.props;

// Ordenar servicios por prioridad definida en CMS
const sortedServices = services.sort((a, b) => a.data.order - b.data.order);
---

<section class="py-20">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-heading font-bold text-white mb-4">
        Soluciones
      </h2>
      <p class="text-gray-400">Lo que puedo hacer por tu negocio</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        sortedServices.map((service) => (
          <article class="bg-surface rounded-2xl p-8 border border-white/5 hover:border-primary/50 transition-colors group">
            <div class="w-16 h-16 bg-background rounded-lg flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <Image
                src={service.data.icon}
                alt={service.data.icon_alt}
                width={64}
                height={64}
                class="w-10 h-10 object-contain"
              />
            </div>

            <h3 class="text-xl font-heading font-bold text-white mb-3">
              {service.data.title}
            </h3>
            <p class="text-gray-400 text-sm leading-relaxed mb-4">
              {service.data.description}
            </p>

            {service.data.price && (
              <div class="pt-4 mt-4 border-t border-white/5">
                <span class="text-secondary font-bold text-sm">
                  {service.data.price}
                </span>
              </div>
            )}
          </article>
        ))
      }
    </div>
  </div>
</section>
